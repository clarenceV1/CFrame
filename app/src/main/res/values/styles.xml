<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="colorAccent">@color/title_color</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="title_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/title_line_color</item>
    </style>
    <style name="dialog_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dialog_divide</item>
    </style>
    <style name="item_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/item_line_color</item>
    </style>
    <style name="item_text_style">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black_292929</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/left_and_right_padding</item>
        <item name="android:paddingRight">@dimen/left_and_right_padding</item>
    </style>
    <style name="welcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@drawable/selector_blue_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="arrow_right_style">
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
