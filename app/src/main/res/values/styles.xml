<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="colorAccent">@color/title_color</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="title_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/title_line_color</item>
    </style>
    <style name="item_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/item_line_color</item>
    </style>
</resources>
