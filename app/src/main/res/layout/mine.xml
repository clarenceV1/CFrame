<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.cai.pullrefresh.PtrScrollViewFrameLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_a">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:id="@+id/rlHeadView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp">

                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        tools:src="@drawable/default_avatar" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_toRightOf="@id/imgIcon"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:id="@+id/tvNickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black_323232"
                            android:textSize="22sp"
                            tools:text="昵称" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvNickname"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/gray_666666"
                            android:textSize="14sp"
                            tools:text="12345678" />

                        <TextView
                            android:id="@+id/btnLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/login"
                            android:textColor="@color/blue_8D48FF"
                            android:textSize="20sp"
                            tools:visibility="visible" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <FrameLayout
                        android:id="@+id/btnMessage"
                        android:layout_width="0dp"
                        android:layout_height="67dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_btn_message" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="@string/message"
                            android:textColor="@color/black_323232"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnHelp"
                        android:layout_width="0dp"
                        android:layout_height="67dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_btn_help" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="@string/help"
                            android:textColor="@color/black_323232"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnAbout"
                        android:layout_width="0dp"
                        android:layout_height="67dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_btn_about" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="@string/about"
                            android:textColor="@color/black_323232"
                            android:textSize="12sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnSetting"
                        android:layout_width="0dp"
                        android:layout_height="67dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/me_btn_set" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="@string/setting"
                            android:textColor="@color/black_323232"
                            android:textSize="12sp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/all_title_tag" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:text="@string/share_getmore"
                        android:textColor="@color/black_323232"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMyInvite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="24dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gray_757575"
                    android:textSize="16sp"
                    tools:text="已经要求N个人" />

                <LinearLayout
                    android:id="@+id/my_content_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.cai.framework.widget.GridViewEx
                        android:id="@+id/gridInvite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/all_title_tag" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:text="@string/share_getmore_candy"
                            android:textColor="@color/black_323232"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ivShareWX"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/me_btn_share_wechat" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ivShareWxq"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/me_btn_share_moments" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ivShareQq"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/me_btn_share_qq" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ivShareSina"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/me_btn_share_weibo" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnShareCopy"
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:background="@drawable/me_btn_share"
                            android:scaleType="fitXY"
                            android:text="@string/shareContent"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvShareTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/gray_757575"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.cai.pullrefresh.PtrScrollViewFrameLayout>
</layout>