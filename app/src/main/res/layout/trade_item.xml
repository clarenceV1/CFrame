<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/ys_16_20_25"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <com.cai.framework.widget.CircleView
        android:id="@+id/circleView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        tools:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvShortCode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/ys_255_255_255"
        tools:text="德国DAX指数" />

    <TextView
        android:id="@+id/tvStockNmae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/circleView"
        android:textColor="@color/ys_255_255_255"
        android:textSize="18sp"
        tools:text="德国DAX指数" />

    <TextView
        android:id="@+id/tvTradeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/tvStockNmae"
        android:background="@drawable/jy_agubg"
        android:paddingLeft="6dp"
        android:paddingRight="3dp"
        android:textColor="@color/ys_255_255_255"
        android:textSize="11sp"
        tools:text="交易中" />

    <TextView
        android:id="@+id/tvRemark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStockNmae"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/circleView"
        android:textColor="@color/ys_70_76_82"
        android:textSize="11sp"
        tools:text="1000元起即可交易" />

    <TextView
        android:id="@+id/tvHandMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="40dp"
        android:textColor="@color/ys_255_255_255"
        android:textSize="17sp"
        tools:text="测试数据" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/imgArrow"
        android:textColor="@color/ys_241_83_83"
        android:textSize="17sp"
        tools:text="测试数据" />

    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/zx_arrow" />
</RelativeLayout>