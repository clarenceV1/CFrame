<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cai.framework.baseview.TitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_and_right_padding"
            android:paddingRight="@dimen/left_and_right_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="@string/user_head"
                android:textColor="@color/black_292929"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/imgHead"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/default_avatar" />
        </LinearLayout>

        <View style="@style/item_line" />

        <LinearLayout
            android:id="@+id/llNickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_item"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_and_right_padding"
            android:paddingRight="@dimen/left_and_right_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="@string/user_nickname"
                android:textColor="@color/black_292929"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textColor="@color/gray_757575"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View style="@style/item_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_and_right_padding"
            android:paddingRight="@dimen/left_and_right_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center_vertical|start"
                android:text="@string/user_phone"
                android:textColor="@color/black_292929"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textColor="@color/gray_757575"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View style="@style/item_line" />

        <TextView
            android:id="@+id/tvCommit"
            style="@style/btn_style"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/login_out" />
    </LinearLayout>
</layout>