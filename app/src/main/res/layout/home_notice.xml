<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ys_30_30_30"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ys_34_34_34"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rlTab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgRange1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_module1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgRange1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/home_notice_title1"
                android:textColor="@color/ys_202_169_101"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/ys_51_51_51" />

        <RelativeLayout
            android:id="@+id/rlTab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgRange2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_module2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgRange2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/home_notice_title2"
                android:textColor="@color/ys_202_169_101"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="@color/ys_51_51_51" />

        <RelativeLayout
            android:id="@+id/rlTab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgRange3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_module3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgRange3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/home_notice_title3"
                android:textColor="@color/ys_202_169_101"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="@color/ys_51_51_51" />

        <RelativeLayout
            android:id="@+id/rlTab4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgRange4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/main_module4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgRange4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/home_notice_title4"
                android:textColor="@color/ys_202_169_101"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/home_notice_new"
            android:textColor="@color/ys_255_255_255"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/notice" />

        <com.cai.framework.widget.VerticalScrollTextView
            android:id="@+id/scrollTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/ys_255_255_255"
            android:textSize="13sp"
            tools:text="sdfsdfsdf" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/ys_118_118_118" />

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:text="@string/home_notice_more"
            android:textColor="@color/ys_255_255_255"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>