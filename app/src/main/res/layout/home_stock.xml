<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/home_stock_title" />

    <RelativeLayout
        android:id="@+id/rlStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.cai.framework.widget.CircleView
            android:id="@+id/circleView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvShortCode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/white_a"
            tools:text="A股" />

        <TextView
            android:id="@+id/tvStockNmae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/circleView"
            android:textSize="17sp"
            tools:text="A股" />

        <TextView
            android:id="@+id/tvTradeState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvStockNmae"
            android:textSize="14sp"
            tools:text="交易中" />

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStockNmae"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/circleView"
            android:textSize="14sp"
            tools:text="1000元起投,T+N实盘交易" />

        <TextView
            android:id="@+id/tvBound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgArrow"
            tools:text="1000元起投" />

        <TextView
            android:id="@+id/tvTradeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBound"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/imgArrow"
            tools:text="09:30-15:00" />

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>
</LinearLayout>