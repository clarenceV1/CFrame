<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/itemHead"
        layout="@layout/candy_item_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:layout_height="100dp"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/rlItemRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/candy_img_background1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                tools:src="@color/gray_A9A9A9" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:text="标题" />

                <TextView
                    android:id="@+id/tvDescrible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:textColor="@color/white_half"
                    android:textSize="12sp"
                    tools:text="描述" />

                <TextView
                    android:id="@+id/tvReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="奖励" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:background="#50ffffff"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/tvGive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:text="+50"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        tools:text="+50" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:textColor="@color/white_half"
                        android:textSize="12sp"
                        tools:text="当前持有1000" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCommit"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/candy_btn_getmore"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/yellow_E98236"
                    android:textSize="12sp"
                    tools:text="获取更多" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>